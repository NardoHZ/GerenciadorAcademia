<%- include ../../partials/header.ejs %>

<body>

  <div id="bg">
    <img src="/img/fundo.jpeg" alt="">
  </div>

  <section>
    <div class="container">
      <!-- CONTEÚDO LATERAL -->
      <div class="row">
        <div class="col-md-6 d-none d-md-block login-texto">
          <div class="text-center login-texto">
            <div class="jumbotron bg-light">
              <img style="width: 320px;" class="logo-login" src="/img/logo-login.png">
              <hr>
              <p class="lead">
                Bem-vindo ao seu painel de controle administrativo!
              </p>
              <p class="lead">
                Gerêncie aqui os clientes, os pacotes promocionais e as mensalidades.
              </p>
            </div>
          </div>
        </div>
        <!-- FIM CONTEÚDO LATERAL -->

        <!-- FORMULÁRIO -->
        <div class="col-md-6">
          <div>
            <div class=" modal-dialog">
              <div class="col-sm-10 main-section">
                <div class="modal-content" style="height: 350px;">
                  <span class="h4 mb-5 text-light login-titulo text-center">Recuperação de Senha</span>

                  <form action="/send/link/reset" method="POST" class="col-12">
                    <div style="<%= messages.ocultar %>" class="inputIcon" id="user-group">
                      <label class="text-light" for="codigo">Email:</label>
                      <input style="padding-left: 35px;" type="email" class="form-control" id="email" name="email"
                        required>
                      <i style="margin-top: 27px;" class="fas fa-at fa-lg fa-fw" aria-hidden="true"></i>
                    </div>
                    <div class="mt-3" id="mensagem" class="mensagem" style="<%= messages.color %> font-size: 16px;">
                      <%= messages.mensagemEmail %>
                    </div>
                    <div style="<%= messages.ocultar %>" class="form-group mt-4">
                      <input type="submit" class="btn btn-primary btn-block btn-lg mt-4" value="Confirmar">
                    </div>
                  </form>

                  </divc>
                </div>
              </div>

            </div>
          </div>
          <!-- FIM FORMULÁRIO -->

        </div>
      </div>
  </section>
</body>
