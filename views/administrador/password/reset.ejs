<%- include ../../partials/header.ejs %>

<body>

  <div id="bg">
    <img src="/img/fundo.jpeg" alt="">
  </div>

  <section>
    <div class="container">
      <!-- CONTEÚDO LATERAL -->
      <div class="row">
        <div class="col-md-6 d-none d-md-block login-texto">
          <div class="text-center login-texto">
            <div class="jumbotron bg-light">
              <img style="width: 320px;" class="logo-login" src="/img/logo-login.png">
              <hr>
              <p class="lead">
                Bem-vindo ao seu painel de controle administrativo!
              </p>
              <p class="lead">
                Gerêncie aqui os clientes, os pacotes promocionais e as mensalidades.
              </p>
            </div>
          </div>
        </div>
        <!-- FIM CONTEÚDO LATERAL -->

        <!-- FORMULÁRIO -->
        <div class="col-md-6">
          <div class="">
            <div class="modal-dialog">
              <div class="col-sm-10 main-section">
                <div class="modal-content">
                  <span class="h4 mb-4 text-light login-titulo text-center">Recuperação de Senha</span>

                  <form action="/salvar/nova-senha" method="POST" class="col-12">
                    <div>
                      <label class="text-light" for="codigo">Nova Senha:</label>
                      <input name="novaSenha" type="password" class="form-control" min="6" required>
                    </div>
                    <div>
                      <label class="text-light mt-3" for="codigo">Confirmar Senha:</label>
                      <input name="confirmarSenha" type="password" class="form-control" required>
                    </div>
                    <div id="error" class="mt-3" id="mensagem" class="mensagem" style="color: red; font-size: 14px;">
                      <%= messages.senhaInvalida %>
                    </div>
                    <div class="mt-4">
                      <input type="submit" class="btn btn-primary btn-block btn-lg mt-4" value="Confirmar">
                    </div>
                  </form>

                </div>
              </div>
            </div>

          </div>
        </div>
        <!-- FIM FORMULÁRIO -->

      </div>
    </div>
  </section>
  <script>
    var mensagemEmail = document.getElementById("email");
    var mensagemSenha = document.getElementById("senha");

    mensagemEmail.addEventListener("focus", apagarMensagem, true);
    mensagemSenha.addEventListener("focus", apagarMensagem, true);

    function apagarMensagem() {
      document.getElementById("error").innerHTML = "";
    }
  </script>
</body>
<%- include ../../partials/footer.ejs %>